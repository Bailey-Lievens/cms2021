<div class="bread-container">
  <h3>Bread form </h3>
  <form action="" class="bread-form">
    <h4>What would you like to order?</h4>
    <input type="radio" class="radio-types" id="bread" name="what_type" value="bread" required>
    <label for="bread">Bread</label><br>
    <input type="radio" class="radio-types" id="dessert" name="what_type" value="dessert" required>
    <label for="dessert">Dessert</label><br>

    <div class="bread-options" style="display:none;">
      <h4>What kind would you like? </h4>
      <select name="bread-type" id="bread-type">
        <option value="" selected disabled hidden>Pick a bread</option>
        <option value="white">White</option>
        <option value="seedy">Seedy</option>
        <option value="very-seedy">Very seedy</option>
      </select>
    </div>

    <div class="dessert-options" style="display:none;">
      <h4>What kind would you like? </h4>
      <input type="checkbox" id="dessert-1" name="dessert-1" value="square-with-chocolate"/>
      <label for="dessert-1" >Square with chocolate</label><br>

      <input type="checkbox" id="dessert-2" name="dessert-2" value="with-apples"/>
      <label for="dessert-2" >With apples</label><br>

      <input type="checkbox" id="dessert-3" name="dessert-3" value="sjoekes"/>
      <label for="dessert-3" >Sjoekes</label><br>
    </div>
    <br><br>
    <label for="name">Name:</label><br>
    <input type="text" id="name" name="name" placeholder="Bailey the madlad" required><br>

    <label for="phone">phone number:</label><br>
    <input type="text" id="phone" name="phone" placeholder="0468 21 20 18" required><br>
    <br><br>
    <input type="submit" value="submit" class="submit-button">
    <br><br>
  </form>
</div>